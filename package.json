{
	"name": "lefse-sidenotes",
	"version": "0.1.0",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"prepare": "husky install",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write ."
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"carta-md": "^4.0.0",
		"unified": "^11.0.4"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.20.7",
		"@sveltejs/package": "^2.3.11",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@types/mdast": "^4.0.4",
		"@types/speakingurl": "^13.0.6",
		"@types/unist": "^3.0.3",
		"@typescript-eslint/eslint-plugin": "^8.30.1",
		"carta-md": "^4.9.0",
		"eslint-config-prettier": "^10.1.2",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-svelte": "^3.5.1",
		"hast-util-to-html": "^9.0.5",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.1",
		"mdast-util-to-hast": "^13.2.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"publint": "^0.3.12",
		"remark-marginnotes": "^0.1.1",
		"speakingurl": "^14.0.1",
		"svelte": "^5.28.1",
		"svelte-check": "^4.1.6",
		"tslib": "^2.8.1",
		"typescript": "^5.8.3",
		"unified": "^11.0.5",
		"unist-builder": "^4.0.0",
		"unist-util-select": "^5.1.0",
		"unist-util-visit": "^5.0.0",
		"vite": "^6.3.2"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": "eslint --cache --fix --no-error-on-unmatched-pattern",
		"*.{js,ts,css,md,svelte,html,yml,json,cjs}": "prettier --write"
	},
	"svelte": "./dist/index.js",
	"keywords": [
		"carta",
		"markdown",
		"editor",
		"remark",
		"unified",
		"text editor",
		"syntax highlighting",
		"subscript",
		"superscript"
	],
	"description": "This plugin adds ability to render sidenotes",
	"dependencies": {
		"hastscript": "^9.0.1",
		"remark-supersub": "^1.0.0",
		"unist-util-find-after": "^5.0.0",
		"unist-util-remove": "^4.0.0"
	}
}
